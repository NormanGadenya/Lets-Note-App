<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorlayout"
    tools:context=".AddEditNoteActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noteEditTitle"
            android:hint="@string/title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/noteEditDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note content"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:inputType="textMultiLine"
            android:background="@android:color/transparent"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/noteEditTitle"
            android:importantForAutofill="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tags"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/whiteBackground"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:id="@+id/whiteBackground"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:foreground="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/tvTimeStamp"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:foreground="@color/Wild_orchid"
            android:id="@+id/wOrchidBackground"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/tvTimeStamp"
            app:layout_constraintStart_toEndOf="@+id/whiteBackground" />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:foreground="@color/Celadon"
            android:id="@+id/celadonBackground"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/tvTimeStamp"
            app:layout_constraintStart_toEndOf="@id/wOrchidBackground"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:foreground="@color/Honeydew"
            android:id="@+id/HoneydrewBackground"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/tvTimeStamp"
            app:layout_constraintStart_toEndOf="@id/celadonBackground"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:foreground="@color/Apricot"
            android:id="@+id/apricotBackground"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/tvTimeStamp"
            app:layout_constraintStart_toEndOf="@+id/HoneydrewBackground" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:foreground="@color/English_violet"
            android:id="@+id/evBackground"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/tvTimeStamp"
            app:layout_constraintStart_toEndOf="@+id/apricotBackground" />

        <TextView
            android:id="@+id/tvTimeStamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>