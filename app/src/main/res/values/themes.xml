<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LetsNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gunmetal</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blush</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

    </style>

    <style name="Theme.LetsNote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name = "BottomSheetBehaviour" parent="ThemeOverlay.MaterialComponents">
        <item name="android:background">@color/laurelgreen</item>
    </style>
    <style name="noteCardTheme" parent="ThemeOverlay.MaterialComponents">
        <item name="android:background">@color/timberwolf</item>
        <item name="android:textColor">@color/gunmetal</item>
    </style>
    <style name="tagTheme" parent="ThemeOverlay.MaterialComponents">

        <item name="android:textColor">@color/gunmetal</item>
        <item name="android:background">@color/Apricot</item>
    </style>
    <style name="Theme.LetsNote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LetsNote.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>